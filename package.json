{
    "name": "grammy-drizzle-bun-template",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "bun run --watch src/index.ts",
        "start": "bun run src/index.ts",
        "lint": "bunx biome lint .",
        "fmt": "bunx biome format --write .",
