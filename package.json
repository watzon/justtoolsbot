        "pg": "^8.16.3"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@types/pg": "^8.15.6",
        "bun-types": "^1.3.3",
        "drizzle-kit": "^0.31.7",
        "typescript": "^5.9.3"
    }
