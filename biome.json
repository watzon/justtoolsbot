{
    "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 2,
        "lineWidth": 100
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useConst": "error",
                "noVar": "error"
            },
            "correctness": {
                "noUnusedVariables": "error"
            }
        }
    },
    "organizeImports": {
        "enabled": true
    },
    "files": {
        "ignore": [
            "dist",
            "coverage"
        ]
    }
}